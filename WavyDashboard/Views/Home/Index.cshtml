@{
    ViewData["Title"] = "Dashboard Wavy";
}

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="text-center mb-4">Dashboard Wavy</h1>
        </div>
    </div>

    <!-- Abas de navegação -->
    <ul class="nav nav-tabs" id="dashboardTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="realtime-tab" data-bs-toggle="tab" data-bs-target="#realtime" type="button" role="tab">
                Tempo Real
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="analysis-tab" data-bs-toggle="tab" data-bs-target="#analysis" type="button" role="tab">
                Análise de Dados
            </button>
        </li>
    </ul>

    <!-- Conteúdo das abas -->
    <div class="tab-content" id="dashboardTabsContent">
        <!-- Aba de Tempo Real -->
        <div class="tab-pane fade show active" id="realtime" role="tabpanel">
            <div class="row mt-4">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h5>Wavys Conectados</h5>
                        </div>
                        <div class="card-body">
                            <div id="connectedWavys" class="list-group">
                                <!-- Lista de Wavys será preenchida via JavaScript -->
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h5>Dados em Tempo Real</h5>
                        </div>
                        <div class="card-body">
                            <canvas id="realtimeChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Aba de Análise -->
        <div class="tab-pane fade" id="analysis" role="tabpanel">
            <div class="row mt-4">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h5>Análise de Dados Históricos</h5>
                        </div>
                        <div class="card-body">
                            <div class="row mb-3">
                                <div class="col-md-4">
                                    <select class="form-select" id="analysisType">
                                        <option value="temperature">Temperatura</option>
                                        <option value="humidity">Umidade</option>
                                        <option value="pressure">Pressão</option>
                                    </select>
                                </div>
                                <div class="col-md-4">
                                    <input type="date" class="form-control" id="startDate">
                                </div>
                                <div class="col-md-4">
                                    <input type="date" class="form-control" id="endDate">
                                </div>
                            </div>
                            <canvas id="analysisChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/dashboard.js"></script>
}
